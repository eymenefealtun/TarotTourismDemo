<UserControl x:Class="Tourism.MainPage.MVVM.View.CustomerOperationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800"
             d:DesignWidth="1500"
             Background="#24292f">


    <Grid x:Name="MainGrid">

        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="50" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>


            <DataGrid x:Name="dgwCustomerOperation"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      Grid.Row="1"
                      Grid.Column="1"
                      Width="850"
                      Height="425"
                      IsReadOnly="True"
                      AutoGenerateColumns="False"
                      ScrollViewer.CanContentScroll="False"
                      EnableRowVirtualization="True"
                      FontFamily="/Fonts/#Poppins"
                      Loaded="dgwCustomerOperation_Loaded">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="First Name"
                                        MinWidth="80"
                                        Binding="{Binding FirstName}" />
                    <DataGridTextColumn Header="Last Name"
                                        MinWidth="80"
                                        Binding="{Binding LastName}" />
                    <DataGridTextColumn Header="Phone"
                                        MinWidth="20"
                                        Binding="{Binding Phone}" />
                    <DataGridTextColumn Header="Birth Date"
                                        MinWidth="40"
                                        Binding="{Binding BirthDate, StringFormat=d}" />
                    <DataGridTextColumn Header="Gender"
                                        MinWidth="20"
                                        Binding="{Binding Gender}" />
                    <DataGridTextColumn Header="Id"
                                        MinWidth="50"
                                        Binding="{Binding IdNumber}" />
                    <DataGridTextColumn Header="Room Id"
                                        MinWidth="30"
                                        Binding="{Binding RoomId}" />
                    <DataGridTextColumn Header="Reservation Id "
                                        MinWidth="30"
                                        Binding="{Binding ReservationId}" />
                    <DataGridTextColumn Header="Bed Type"
                                        MinWidth="30"
                                        Binding="{Binding BedType}" />
                    <DataGridTextColumn Header="ReservationCode"
                                        MinWidth="30"
                                        Binding="{Binding ReservationCode}">
                    </DataGridTextColumn>

                </DataGrid.Columns>

            </DataGrid>





            <Border  x:Name="borderCustomerOperationSearch"
                     Grid.Column="1"
                     Grid.Row="0"
                     Background="#353340"
                     Width="190"
                     Height="40"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center"
                     Margin="1,0,0,0"
                     CornerRadius="10">
                <Grid>
                    <TextBox  x:Name="tboxCustomerOperationSearch"
                              Height="40"
                              Width="190"
                              Padding="5"
                              BorderThickness="0"
                              Margin="1"
                              Background="Transparent"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Left"
                              HorizontalContentAlignment="Left"
                              VerticalContentAlignment="Center"
                              FontSize="11"
                              FontFamily="/Fonts/#Poppins"
                              Foreground="#CFCFCF"
                              TextChanged="tboxCustomerOperationSearch_TextChanged" />
                    <TextBlock   Text="Search"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Center"
                                 FontSize="11"
                                 Margin="10,0,0,0"
                                 FontFamily="/Fonts/#Poppins"
                                 Foreground="DarkGray">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Visibility"
                                        Value="Hidden" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=tboxCustomerOperationSearch}"
                                                 Value="">
                                        <Setter Property="Visibility"
                                                Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

            </Border>

            <TextBlock x:Name="txbOperation"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Grid.Row="0"
                       Grid.Column="1"
                       Foreground="White"
                       FontFamily="/Fonts/#Poppins"
                       Margin="195,0,0,0" />

            <Image Height="40"
                   Width="40"
                   Source="/Images/back.png" />
            <Button x:Name="btnBack"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Foreground="#da4543"
                    ToolTip="Back"
                    Command="{Binding OperationViewCommand}"
                    Click="btnBack_Click"
                    MouseMove="btnBack_MouseMove" />



        </Grid>
    </Grid>
</UserControl>
